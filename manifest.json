{
  "manifest_version": 3,
  "name": "Auto-connexion Alcasar",
  "version": "1.3.1",
  "description": "Automatise le clic sur le bouton de connexion lors du chargement de la page.",
  "icons": {
    "16": "assets/icons/alcasar.webp",
    "48": "assets/icons/alcasar.webp",
    "128": "assets/icons/alcasar.webp"
  },
  "content_scripts": [
    {
      "matches": [
        "https://alcasar.laplateforme.io/*"
      ],
      "js": [
        "assets/script/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/alcasar.webp"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}