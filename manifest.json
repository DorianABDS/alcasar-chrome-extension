{
  "manifest_version": 3,
  "name": "ALCASAR Auto-Reconnect",
  "version": "1.3.1",
  "description": "Reconnexion automatique pour ALCASAR avec bouton de contr√¥le",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "script/main.js"
      ],
      "type": "module"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "assets/style/styles.css",
        "assets/images/alcasar-logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "storage"
  ]
}