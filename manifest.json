{
  "manifest_version": 3,
  "name": "Auto-connexion Alcasar",
  "version": "1.4.0",
  "description": "Reconnexion automatique pour ALCASAR avec bouton de contr√¥le",
  "content_scripts": [
    {
      "matches": [
        "https://alcasar.laplateforme.io/*"
      ],
      "js": [
        "assets/script/toast.js",
        "assets/script/cssInjector.js",
        "assets/script/autoReconnect.js",
        "assets/script/stateManager.js",
        "assets/script/floatingButton.js",
        "assets/script/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/styles.css",
        "assets/icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
